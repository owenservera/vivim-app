{
  "name": "@vivim/sdk",
  "version": "1.0.0",
  "description": "VIVIM SDK - Open-Source E2E Self-Contained Toolkit for Decentralized Applications",
  "type": "module",
  "bin": {
    "vivim": "src/cli/vivim-git.ts",
    "vivim-node": "src/cli/vivim-node.ts"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./nodes": {
      "import": "./dist/nodes/index.js",
      "types": "./dist/nodes/index.d.ts"
    },
    "./bun": {
      "import": "./dist/bun/index.js",
      "types": "./dist/bun/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@vivim/network-engine": "workspace:*",
    "@noble/ed25519": "^2.0.0",
    "@noble/hashes": "^1.3.0",
    "@noble/ciphers": "^0.4.0",
    "multiformats": "^13.0.0",
    "uint8arrays": "^5.0.0",
    "eventemitter3": "^5.0.1",
    "zod": "^3.22.4",
    "debug": "^4.3.4",
    "yjs": "^13.6.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/ui": "^1.1.0",
    "bun-types": "^1.3.9",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "libp2p": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "libp2p": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "vivim",
    "sdk",
    "blockchain",
    "decentralized",
    "p2p",
    "crdt",
    "ai",
    "memory"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vivim/vivim-sdk"
  }
}

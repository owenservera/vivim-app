# OpenScroll PWA Environment Configuration
# Copy this file to .env and adjust values as needed.

# API Base URL - Point to the actual server IP (WITHOUT /api/v1 suffix)
# For local development: VITE_API_BASE_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:3000

# API URL for feed API (used by feed-api.ts)
VITE_API_URL=http://localhost:3000

# WebSocket URL for Yjs sync
VITE_WS_URL=ws://localhost:3000

# Fallback server configuration
VITE_FALLBACK_SERVER=http://localhost:3000

# API Key for authentication (should match server configuration)
VITE_API_KEY=sk-openscroll-dev-key-123456789

# Enable development features
VITE_DEV_TOOLS=true

# Use local feed mode (reads from IndexedDB instead of backend API)
VITE_USE_LOCAL_FEED=false

    "@libp2p/noise": "^1.0.0",
    "@libp2p/tls": "^3.0.0",
    "@libp2p/yamux": "^8.0.0",
    "@libp2p/mplex": "^12.0.0",
    "@libp2p/kad-dht": "^16.0.0",
    "@libp2p/gossipsub": "^15.0.0",
    "@libp2p/bootstrap": "^12.0.0",
    "@libp2p/mdns": "^12.0.0",
    "@libp2p/identify": "^4.0.0",
    "@libp2p/ping": "^3.0.0",
    "@chainsafe/libp2p-gossipsub": "^14.0.0",

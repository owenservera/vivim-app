{
  "name": "vivim-server",
  "version": "1.0.0",
  "description": "VIVIM API - Own Your AI Capture Platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "bun src/server.js",
    "dev": "bun --watch src/server.js",
    "dev:swagger": "bunx cross-env ENABLE_SWAGGER=true bun --watch src/server.js",
    "test": "bun test",
    "test:watch": "bun --watch vitest",
    "test:coverage": "bun run vitest --coverage",
    "lint": "bunx eslint src/",
    "lint:fix": "bunx eslint src/ --fix",
    "format": "bunx prettier --write src/",
    "db:migrate": "bunx prisma migrate deploy",
    "db:generate": "bunx prisma generate",
    "db:studio": "bunx prisma studio",
    "db:push": "bunx prisma db push",
    "db:seed": "bun run prisma/seed-real-data.ts",
    "test:e2e": "bun run scripts/test-e2e.ts",
    "build:core": "pwsh finish_rust_setup.ps1",
    "typecheck": "tsc --noEmit",
    "generate:vivim-context": "node scripts/generate-vivim-context.js"
  },
  "keywords": [
    "api",
    "express",
    "conversation",
    "ai",
    "capture",
    "bun"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.42",
    "@ai-sdk/google": "^3.0.26",
    "@ai-sdk/openai": "^3.0.27",
    "@ai-sdk/xai": "^3.0.54",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@qdrant/js-client-rest": "^1.16.2",
    "@types/pg": "^8.16.0",
    "ai": "^6.0.82",
    "cheerio": "^1.2.0",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "helmet": "^8.1.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.18.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "playwright": "^1.58.2",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "socket.io": "^4.8.3",
    "swagger-ui-express": "^5.0.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "uuid": "^13.0.0",
    "yamljs": "^0.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.31",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.5.0",
    "prisma": "^7.3.0",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "trustedDependencies": [
    "esbuild",
    "prisma",
    "vitest"
  ]
}
